<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
		 id="WebApp_ID"
		 version="4.0">

  <display-name>demo</display-name>

  <welcome-file-list>
   		<welcome-file>/WEB-INF/jsp/welcome.jsp</welcome-file>
  </welcome-file-list>


<!--============================================================
	i18n support
=============================================================-->
  <!-- this way we set the resource bundle name -->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>

  <!-- this way we set the default locale (optional) -->
  <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>

  <!-- supported locales -->
  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>


<!--============================================================
	Controller
=============================================================-->
	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>com.demo.web.controller.Controller</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>


<!--============================================================
	Encoding support filter
=============================================================-->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.demo.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/jsp/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>


<!--============================================================
	Security filter.
	1) admin: admin commands
	2) client: client commands
	3) commons: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
=============================================================-->

	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>com.demo.web.filter.CommandAccessFilter</filter-class>
		 <init-param>
			<param-name>admin</param-name>
			<param-value>
				view-room-list
				view-room-create
				view-room-edit
				create-room
				edit-room
				upload-image
				delete-image
			</param-value>
		</init-param>
		<init-param>
			<param-name>manager</param-name>
			<param-value>
				view-booking-request-list
				view-booking-request
				create-booking
				delete-booking-request
			</param-value>
		</init-param>
		<init-param>
			<param-name>customer</param-name>
			<param-value>
				view-room-list
				view-room
				view-bill
				view-booking-request-create
				view-booking-create
				view-account
				create-booking-request
				create-booking
				bill-mail
				confirm-booking
				delete-booking
			</param-value>
		</init-param>
		<init-param>
			<param-name>inactive</param-name>
			<param-value>
				view-activation
				activation
				activation-mail
			</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>
				view-settings
				view-welcome
				view-error
				view-image
				logout
				no-command
				update-settings
			</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>
				view-login
				view-room
				view-room-list
				view-registration
				view-settings
				view-welcome
				view-image
				view-error
				login
				registration
				activation
				no-command
				update-settings
			</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

<!--============================================================
	Context listener
=============================================================-->
	<listener>
		<listener-class>com.demo.web.listener.ContextListener</listener-class>
	</listener>

<!--============================================================
	Error page
=============================================================-->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>

</web-app>